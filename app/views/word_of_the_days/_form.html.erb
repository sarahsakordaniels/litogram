<%= form_with(model: word_of_the_day, local: true) do |form| %>
  <% if word_of_the_day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word_of_the_day.errors.count, "error") %> prohibited this word_of_the_day from being saved:</h2>

      <ul>
      <% word_of_the_day.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @word_of_the_day do |f| %>
  Word: <%=f.text_field :word %><br>
