  Example: <%=f.text_area :example %><br>
  Part of Speech: <%=f.text_field :part_of_speech %><br>
  pronunciation: <%=f.text_area :pronunciation %><br>
    <div class="actions"><br>
      <%= f.submit %>
  </div>
<% end %>
<% end %>
